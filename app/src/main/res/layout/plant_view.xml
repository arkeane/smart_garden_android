<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PlantViewFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/plant_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:importantForAccessibility="no" />

            <TextView
                android:id="@+id/tvPlantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/plant_name"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvPlantDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/plant_description"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvPlantCreated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/plant_date_planted"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnWater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/water_plant"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvMoisture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="16dp"
                android:text="@string/moisture_graph"
                tools:ignore="RtlHardcoded" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graphMoisture"
                android:layout_width="match_parent"
                android:layout_height="150dip" />

            <TextView
                android:id="@+id/tvTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="16dp"
                android:text="@string/temperature_graph"
                tools:ignore="RtlHardcoded" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graphTemperature"
                android:layout_width="match_parent"
                android:layout_height="150dip" />

            <TextView
                android:id="@+id/tvHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="16dp"
                android:text="@string/humidity_graph"
                tools:ignore="RtlHardcoded" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graphHumidity"
                android:layout_width="match_parent"
                android:layout_height="150dip" />

            <TextView
                android:id="@+id/tvLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="16dp"
                android:text="@string/light_graph"
                tools:ignore="RtlHardcoded" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graphLight"
                android:layout_width="match_parent"
                android:layout_height="150dip" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>